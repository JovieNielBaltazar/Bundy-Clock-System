<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "Login Page"
            TextInput:
                id: worker_id
                hint_text: "Enter Employee/Admin Id"
            TextInput:
                id: worker_pass
                hint_text: "Enter Password"
        GridLayout:
            cols: 2
            Button:
                text: "Login as Employee"
                on_press: root.welcome_employee(root.ids.worker_id, root.ids.worker_pass)
            Button:
                text: "Login as Admin"
                on_press: root.welcome_admin(root.ids.worker_id, root.ids.worker_pass)

<WelcomeEmployee>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "Login Successful"
        GridLayout:
            cols: 2
            Button:
                text: "Time In"
            Button:
                text: "Time Out"
        GridLayout:
            cols: 1
            Button:
                text: "View Employee Performance"
            Button:
                text: "View Employee Data"
            Button:
                text: "Go Back to Log-in page"
                on_press: root.login_screen()

<WelcomeAdmin>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            GridLayout:
                cols: 1
                Button:
                    text: "Add Employee"
                    on_press: root.add_employee()
                Button:
                    text: "Remove Employee"
                Button:
                    text: "Add Another Admin"
            GridLayout:
                cols: 1
                Button:
                    text: "View Employee Performance"
                Button:
                    text: "View Employee Data"
                Button:
                    text: "View All Admins"
        GridLayout:
            cols: 1
            Button:
                text: "Go back to Log-in Page"

<AddEmployee>:
    GridLayout:
        cols: 1
        Label:
            text: "Enter Employee Credentials"
        TextInput:
            id: employee_name
            hint_text: "Enter Employee Name"
        TextInput:
            id: employee_pass
            hint_text: "Enter Password"
        Button:
            text: "Add Employee"
            on_press: root.employee_add_success(root.ids.employee_name, root.ids.employee_pass)

<EmployeeAddSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Employee Added!"
        Button:
            text: "Go Back to Admin Page"
            on_press: root.welcome_admin()
        Button:
            text: "Go Back to Log-in Page"
            on_press: root.login_screen()


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    WelcomeEmployee:
        name: "welcome_employee"
    WelcomeAdmin:
        name: "welcome_admin"
    AddEmployee:
        name: "add_employee"
    EmployeeAddSuccess:
        name: "employee_add_success"


